{
  "rules": {
    "quotemark": ["double"],
    "class-name": true,
    "curly": true,
    "eofline": false,
    "forin": true,
    "indent": [true, "spaces"],
    "max-line-length": [true, 120],
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-duplicate-variable": true,
    "no-internal-module": true,
    "no-require-imports": false,
    "no-switch-case-fall-through": false, // set to true when this issue is fixed: https://github.com/palantir/tslint/issues/785
    "no-unused-expression": true,
    "no-var-keyword": true,
    "radix": true,
    "semicolon": [true],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "triple-equals": [true, "allow-null-check"],
    "typedef": [
      false,
      "call-signature",
      "parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "whitespace": [
      false,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
