{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "skipLibCheck": true, // todo: remove it when @types/lodash is fixed
    "strictNullChecks": false
  },
  "include": ["./**/*"]
}
